{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@web/*": ["src/web/*"],
      "@api/*": ["src/api/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@fixtures/*": ["fixtures/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "fixtures/**/*.ts",
    "tests/**/*.ts",
    "global-setup.ts",
    "global-teardown.ts",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
